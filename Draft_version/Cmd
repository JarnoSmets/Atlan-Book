\def\DeclareLetter#1#2{%
	\gdef\corpsgrootte{8pt}
		\resizebox{\corpsgrootte}{!}{
        		\begin{tikzpicture}
            			\pic{grid};
				\def\LV{(BottomLeft) -- (UpperLeft)}
				\def\CH{(CenterLeft) -- (CenterRight)}
				\draw[line width = \thickness] #1;
				\draw[line width = \thickness] #2;
        		\end{tikzpicture}
		}
}
